using System.Reflection;
using Jubi;
using Jubi.Abstracts;
using Jubi.Abstracts.Executors;
using Jubi.Attributes;
using Jubi.Models;
using Jubi.Response;
using Jubi.Response.Attachments.Keyboard;
using Jubi.Response.Attachments.Keyboard.Parameters;
using Jubi.Telegram;

namespace AnonMessage.Executors;

public class Executors
{
    [Command("start")]
    public class StartExecutor : CommandExecutor
    {
        public override Message? Execute()
        {
            var ThisUser = (User as TelegramUser).Username;
            var keyboard = new InlineMarkupKeyboard();
            keyboard.AddButton("–ù–∞–∑–∞–¥", () => { User.Send("username"); });
            keyboard.AddButton("–ù–∞–ø–∏—Å–∞—Ç—å —Å–æ–æ–±—â–µ–Ω–∏–µ üëÄ", () => { User.Read("–û—Ç–ø—Ä–∞–≤—å —é–∑–µ—Ä–Ω–µ–π–º —á–µ–ª–æ–≤–µ–∫–∞, –∫–æ—Ç–æ—Ä–æ–º—É –±—É–¥–µ–º –ø–∏—Å–∞—Ç—å üò∂", Username =>
            {
                User.Send(Username);
            });; });
            
            
            return new Message( "–ü—Ä–∏–≤–µ—Ç, —ç—Ç–æ—Ç –±–æ—Ç –ø—Ä–µ–¥–Ω–∞–∑–Ω–∞—á–µ–Ω –¥–ª—è –∞–Ω–æ–Ω–∏–º–Ω–æ–π –æ—Ç–ø—Ä–∞–≤–∫–∏ —Å–æ–æ–±—â–µ–Ω–∏–π –¥—Ä—É–≥–∏–º –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è–º, —á—Ç–æ –±—ã –ø—Ä–æ–¥–æ–ª–∂–∏—Ç—å - –∂–º–∏ –∫–Ω–æ–ø–∫—É —Å–Ω–∏–∑—É", keyboard);
        }

        void SendInfoToUserBot()
        {
            
        }
    }
}
